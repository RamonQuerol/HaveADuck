<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otheractivities.editpato.EditPatoActivity">

    <ImageView
        android:id="@+id/editPato_imageView"
        android:layout_width="377dp"
        android:layout_height="376dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <EditText
        android:id="@+id/editPato_nombre_editText"
        android:layout_width="331dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="@string/introduce_el_nombre"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPato_imageView"
        app:layout_constraintVertical_bias="0.103" />

    <EditText
        android:id="@+id/editPato_descripcion_editText"
        android:layout_width="383dp"
        android:layout_height="148dp"
        android:layout_marginBottom="84dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/introduce_la_descripcion"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPato_nombre_editText"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/editPato_guardar_button"
        android:layout_width="141dp"
        android:layout_height="59dp"
        android:text="Finalizar edicion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPato_descripcion_editText"
        app:layout_constraintVertical_bias="0.36" />

    <Button
        android:id="@+id/editPato_volver_button"
        android:layout_width="141dp"
        android:layout_height="59dp"
        android:text="Volver atras"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editPato_guardar_button"
        app:layout_constraintHorizontal_bias="0.141"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPato_descripcion_editText"
        app:layout_constraintVertical_bias="0.36" />

</androidx.constraintlayout.widget.ConstraintLayout>